---
import Button from "../ui/Button.astro";
import { Icon } from "astro-icon/components";
export const statsData = [
  {
    title: "+25% de CA",
    text: "En moyenne pour les entreprises <br/> e-commerce B2B/B2C.",
    icon: "increase",
  },
  {
    title: "-50% des coûts",
    text: "Grâce à l'automatisation des <br/> processus.",
    icon: "coins",
  },
  {
    title: "70% des acheteurs B2B",
    text: "Préfèrent commander <br/> en ligne.",
    icon: "sale",
  },
  {
    title: "80% des entreprises",
    text: "Constatent une meilleure <br/> satisfaction client.",
    icon: "company",
  },
];
---

<div class="wrapper">
  <div
    class="mx-2 bg-secondary-dark rounded-2xl lg:rounded-[30px] min-h-[400px] p-4 lg:min-h-[500px] flex items-center justify-center flex-col text-white text-center gap-3 lg:gap-5">
    <p class="tracking-wider font-light text-sm sm:text-base">
      La solution complète pour gérer les commandes et développer les ventes
    </p>
    <h1 class="text-3xl sm:text-4xl md:text-5xl lg:text-[66px] font-bold">
      Boostez votre commerce<br /> de gros avec Ventrad
    </h1>
    <p class="tracking-wider font-light max-w-[85ch] text-sm mt-2 lg:mt-4">
      Gérez sans effort vos stocks, vos commandes et vos clients sur le web et
      sur mobile. Augmentez vos ventes et développez votre activité avec la
      solution e-commerce tout-en-un de Ventrade.
    </p>
    <div class="flex items-center gap-3 mt-5 lg:mt-8 flex-wrap justify-center">
      <Button variant="outline">Contacter Sales</Button>
      <Button>Obtenir Une Démo</Button>
    </div>
  </div>
  <div
    class="mt-4 justify-center grid grid-cols-[repeat(auto-fit,minmax(180px,1fr))] gap-y-6 leading-5 gap-4 items-center px-6 py-3 lg:px-8 lg:py-5 bg-secondary-light rounded-xl lg:rounded-[20px] mx-2">
    {
      statsData.map(item => (
        <div class="flex gap-3">
          <p class="h-10 lg:h-14 text-xl lg:text-3xl aspect-square flex items-center justify-center  rounded-full bg-secondary">
            <Icon name={item.icon} />
          </p>
          <div class="flex flex-col gap-1">
            <p class="text-black font-semibold">{item.title} </p>
            <p class="text-black/70" set:html={item.text}>
              {" "}
            </p>
          </div>
        </div>
      ))
    }
  </div>
</div>
