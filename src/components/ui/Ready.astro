---
import Button from "./Button.astro";
import Container from "./Container.astro";
import logo from "@assets/logos/logowhite.svg?url";
---

<div class="bg-secondary mt-16">
  <Container>
    <div class="p-8 lg:p-16  max-w-[1300px] mx-auto relative">
      <div class="flex flex-col items-start static z-10">
        <p class="text-4xl lg:text-5xl font-bold mb-2 text-white/50">
          Prêt à utiliser
        </p>
        <p class="text-4xl lg:text-5xl font-bold text-white">Ventred?</p>
        <div
          class="flex items-center gap-3 mt-5 lg:mt-8 flex-wrap justify-center">
          <Button variant="outline" action="contact" color="white"
            >Contacter Sales</Button
          >
          <Button action="contact">Obtenir Une Démo</Button>
        </div>
      </div>
      <img
        src={logo}
        alt=""
        class="opacity-[.03] md:opacity-10 absolute h-full right-0 top-0"
      />
    </div>
  </Container>
</div>
