---
import * as academyMd from "@/content/academy.md";
import i18next from "i18next";
import Container from "../ui/Container.astro";
import UpperTitle from "../ui/UpperTitle.astro";
import Title2 from "../ui/Title2.astro";
import Paragraph from "../ui/Paragraph.astro";

const academyContent = academyMd.frontmatter;
const lng = i18next.language;
const upperTitleText =
  lng === "fr" ? academyContent.upperTitleFr : academyContent.upperTitleEn;
const titleText =
  lng === "fr" ? academyContent.titleFr : academyContent.titleEn;
const descriptionText =
  lng === "fr" ? academyContent.descriptionFr : academyContent.descriptionEn;
---

<Container>
  <div class="flex flex-col p-2 items-center justify-center text-center gap-3 max-w-[100ch] mt-10 mx-auto ">
    <UpperTitle>{upperTitleText} </UpperTitle>
    <Title2>{titleText} </Title2>
    <Paragraph>{descriptionText} </Paragraph>
  </div>
</Container>
